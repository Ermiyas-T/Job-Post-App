<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/VeryLightBlue1"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/createjoblist_company_job_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Job Title"
            android:padding="12dp"
            android:textColor="@color/lightbrown"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Company Name Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/createjoblist_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Company Name"
            android:padding="12dp"
            android:textColor="@color/lightbrown"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/createjoblist_company_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Company Address"
            android:padding="12dp"
            android:textColor="@color/lightbrown"
            android:textSize="18sp" />
    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/createjoblist_job_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/VeryLightBlue1"
            android:gravity="top"
            android:hint="Job Description"
            android:inputType="textMultiLine|textCapSentences|textCapWords"
            android:minLines="3"
            android:padding="8dp"
            android:textColor="@color/lightbrown"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/createjoblist_job_requirements"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Job Requirements"
            android:padding="12dp"
            android:textColor="@color/lightbrown"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/createjoblist_post_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/DarkBlue2"
        android:padding="12dp"
        android:text="Post"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
